{% extends "::base.html.twig" %}
{% block body %}
    {{ parent() }}
    <div class="modal fade" id="myUnactiveModal" tabindex="-1" role="dialog" aria-labelledby="myUnactiveModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
                    <h4 class="modal-title label label-warning modalFS" id="myUnactiveModalLabel">En construction !</h4>
                </div>
                <div class="modal-body" style="text-align:center;">
                    Cette partie sera accessible prochainement
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn center-block shadow btnBeigeElton orange bold" style="color:white!important;"data-dismiss="modal">Fermer</button>
                </div>
            </div>
        </div>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <h1 class="lessonCategoryTitle" style="color: grey;">Fiches culturelles</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <img class="img-responsive" src="{{asset('bundles/eltoncore/images/map.png')}}">
                <div class="center" style="margin-top:25px;">
                    {% for category in categorys %}
                        {% if category.active %}
                        <a class="{{category.color}} buttonVerySmall" style="line-height:55px; margin-left:20px;" href="{{path('category_show', {id : category.id})}}">{{category.libelle}}</a>
                        {% else %}
                        <a class="buttonVerySmall  {{category.color}}" style="line-height:55px; margin-left:20px; opacity: 0.5;" data-toggle="modal" data-target="#myUnactiveModal">{{category.libelle}}</a>
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}