{% extends "::base.html.twig" %}

{% block body -%}
    {{ parent() }}
    <div class="container">
        <div class="row">
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <h1 class="lessonCategoryTitle">{{entity.libelle}}</h1>
                <div class="buttonTableCont">
                        {% for lesson in entity.lessons %}
                            <a class="buttonTableSmall {{lesson.type}}" href="{{path('lesson_show', { id : lesson.id, order : loop.index })}}"> <span class="lessonNumber">{{loop.index}}</span> <br/> {{lesson.libelle}}</a>
                            {% if loop.index % 3 == 0 %}
                            </div>
                            <div class="buttonTableCont">
                            {% endif %}
                        {% endfor %}
                </div>
            </div>
            </div>
        </div>
    </div>
{% endblock %}