{% extends "::base.html.twig" %}
{% block body %}
    {{ parent() }}
    {% form_theme form 'EltonCoreBundle:Form:create_field.html.twig' %}
    <div class="container" style="margin-top:50px;">
        <div class="row"> 
            <div class="col-md-3"></div>
            <div class="col-md-6">
                <form action="{{ path('fos_user_registration_register', {offer : offer }) }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_register">
                    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
                        <div class="carousel-inner">
                            <div class="item center active">
                                    {{ form_label(form.postalCode) }}
                                    {{ form_widget(form.postalCode) }}<br/>
                                    <select class="form-control" id="selectedOne"><option>Choisissez votre Ã©cole</option></select><br/><br/>
                                    {{form_label(form.school)}}
                                    {{form_widget(form.school)}}
                                    {{form_label(form.town)}}
                                    {{form_widget(form.town)}}
                                    {{form_label(form.address)}}
                                    {{form_widget(form.address)}}
                            </div>
                            <div class="item center">
                                    {{form_label(form.civilite)}}
                                    {{form_widget(form.civilite)}}
                                    {{ form_label(form.name) }}
                                    {{ form_widget(form.name) }}<br/>
                                    {{ form_label(form.firstName) }}
                                    {{ form_widget(form.firstName) }}<br/>
                                    {{form(form)}}
                                    <input type="submit" class="buttonAll violet" value="S'inscrire"/>
                            </div>
                        </div>
                        <div class="center">
                            <a class="buttonAll fs18 violetBis" id="nextButton" href="#carousel-example-generic" role="button" data-slide="prev" onclick="changeButtonName();">Suivant</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
