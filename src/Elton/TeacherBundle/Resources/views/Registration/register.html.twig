{% block body -%}
    <div class="smallElton"></div>
    {% form_theme form 'EltonCoreBundle:Form:create_field.html.twig' %}
    <form action="{{ path('fos_user_registration_register') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_register">
        <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
            <div class="carousel-inner">
                <div class="item active center">
                        {{ form_label(form.name) }}
                        {{ form_widget(form.name) }}
                        {{ form_label(form.firstName) }}
                        {{ form_widget(form.firstName) }}
                </div>
                <div class="item center">
                        {{ form_label(form.postalCode) }}
                        {{ form_widget(form.postalCode) }}
                </div>
                <div class="item center">
                        <select id="selectedOne"><option>Choisissez votre école</option></select><br/>
                        {{form_label(form.school)}}
                        {{form_widget(form.school)}}
                        {{form_label(form.town)}}
                        {{form_widget(form.town)}}
                        {{form_label(form.address)}}
                        {{form_widget(form.address)}}
                </div>
                <div class="item center">
                        {{form(form)}}
                        <input type="submit" class="buttonAll violetBis" value="S'inscrire"/>
                </div>
            </div>
            <ol class="carousel-indicators" style="position:relative; margin-top: 40px;">
                <li  class="active"></li>
                <li ></li>
                <li data-target="#carousel-example-generic"></li>
                <li data-target="#carousel-example-generic"></li>
            </ol>
            <div>
                <a class="buttonAll fs18 violetBis" href="#carousel-example-generic" role="button" data-slide="prev">Précédent</a>
                <a class="buttonAll fs18 violetBis" style="float:right;" href="#carousel-example-generic" role="button" data-slide="next">Suivant</a>
            </div>
        </div>
    </form>
{% endblock %}
